<div class='page-header'>
  <h2>Zaloguj się</h2>
</div>
<div class='jumbotron'>
  <div class='container'>

    <div class='container col-sm-4'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class='form-group'>
        <%= f.label :email, "Email", class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.email_field :email, class: 'form-control', autofocus: true %>
        </div>
      </div>

      <div class='form-group'>
        <%= f.label :password, "Hasło", class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-10'>
            <div class='checkobox'>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Zapamiętaj moje dane" %>
            </div>
          </div>
        </div>
      <% end -%>

      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-left' %>
          <%= f.submit "Zaloguj", class: 'btn btn-default pull-right' %>
        </div>
      </div>
    <% end %>
    <div class='container'>
    <h3>Nie masz jeszcze konta? <%= link_to "Załóż je!", new_registration_path(resource_name) %></h3>
    </div>
    </div>
  </div>
</div>


